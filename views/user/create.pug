	<div class="container body_bgc container-lg">
		<div class="col-8 form_bg_clr">
			<h3 class ="text-center mt-2 emp_dtls"> Employee Details</h3>
			<form action="/users/store" method = "post">
			<div class="col-sm mt-2 demo">
				<input type="emp_id" name ="uuid" class="form-control" id="exampleFormControlInput1" placeholder="Enter Employe Id" required>
			<div>
			<div class="col-sm mt-2">
				<input type="emp_id" name ="first_name" class="form-control" id="exampleFormControlInput1" placeholder="First Name" required>

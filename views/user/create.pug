			<div class="col-sm mt-2">
				<input type="emp_id" name ="last_name" class="form-control" id="exampleFormControlInput1" placeholder="Last Name" required>
			</div>
			<div class="col-sm mt-2">
				<input type="emp_id" name ="father_name" class="form-control" id="exampleFormControlInput1" placeholder="Father's Name">
			</div>
			<div class="col-sm mt-2">
				<input type="emp_id" name ="email" class="form-control" id="exampleFormControlInput1" placeholder="Email" required>

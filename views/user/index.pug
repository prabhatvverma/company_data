extends ../layout
block content
    <table class="table">
        <thead class = "table-dark">
            <tr>
            <th scope="col">Sr. No.</th>
            <th scope="col">Employee ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope ="col">Father's Name</th>
            <th scope ="col">Email</th>
            <th scope="col">Mobile No</th>
            <th scope ="col">Gender</th>
            <th scope ="col">Hobbies</th>
            <th scope="col">State</th>
            <th scope="col">City</th>
            <th scope="col">Image</th>
            <th scope="col">Update/Delete</th>
            </tr>
        </thead>
        <tbody>
            each val, index in rows
                <tr>
                    <td> !{val.id} </td>
                    <td> !{val.uuid} </td>
                    <td> !{val.first_name} </td>
                    <td>!{val.last_name}</td>
                    <td>!{val.father_name}</td>
                    <td>!{val.email}</td>
                    <td>!{val.phone_no}</td>
                    <td>!{val.gender} </td>
                    <td>!{val.hobbies} </td>
                    <td>!{val.state} </td>
                    <td>!{val.city} </td>
                    <td>
                    <img src="/images/!{val.img_file}" alt="..." class="img-thumbnail" width="100px"></td>
                    <td>
                        <a class="btn btn-outline-success" href="/users/!{val.id}/edit">edit</a>
                        <a class="btn btn-outline-danger" onclick= "return confirm('Are You Sure ?')" href="/users/!{val.id}/delete">Delete</a>
                        //- <button type="button" id ="upd_btn" class="btn btn-outline-success" href = "users/!{val.id}/edit">Update
                        //- </button>
                        //- <button type="button" id = "dlt_btn" class="btn btn-outline-danger">Delete
                        //- </button>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
        </tbody>
    </table>
    <script src = "/javascripts/layout.js"></script>